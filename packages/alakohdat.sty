\ProvidesPackage{commons/packages/alakohdat}

% Ympäristöjä listoille:
% - alakohdat: tehtävien, esimerkkien ja vastausten alakohdat: a), b), c), ... (vrt. enumerate a)-optiolla)
% - vaiheet: ratkaisun vaiheet ym.: 1., 2., 3., ... (vrt. enumerate)
% - luettelo: vapaamuotoiset listat: ei numerointia (vrt. itemize)
% - tekijät: varattu tekijöiden listaukseen, ulkoasu saattaa muuttua
% Huom! "alakohdat vierekkäin" -variantti poistettu

% Käyttöesimerkit:

% \alakohdat{
%   § alakohta1
%   § alakohta2
% }

% \vaiheet{
%   § vaihe1
%   § vaihe2
% }

% \luettelo{
%   § luettelotasolla1
%	§§ luettelotasolla2
%   § luettelotasolla1
%	§§ luettelotasolla2
%	§§§ luettelotasolla3
% }

% "I told you that active characters were nasty" -- easylist documentation
% http://tex.stackexchange.com/questions/119646/define-a-custom-command-to-wrap-easylist

\makeatletter
\newcommand{\alakohdat@aux}[1]{\begin{easylist}\NewList(Start1=1,Numbers=l,FinalMark={)})#1\end{easylist}\endgroup}
\newcommand{\alakohdat}{\begingroup\Activate\alakohdat@aux}
\newcommand{\vaiheet@aux}[1]{\begin{easylist}\NewList(Start1=1,Numbers=a,FinalMark={.})#1\end{easylist}\endgroup}
\newcommand{\vaiheet}{\begingroup\Activate\vaiheet@aux}
\newcommand{\luettelo@aux}[1]{\begin{easylist}[itemize]#1\end{easylist}\endgroup}
\newcommand{\luettelo}{\begingroup\Activate\luettelo@aux}
\newcommand{\tekijat@aux}[1]{\begin{easylist}\NewList(Hide=100)#1\end{easylist}\endgroup}
\newcommand{\tekijat}{\begingroup\Activate\tekijat@aux}
\makeatother
