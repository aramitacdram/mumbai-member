\ProvidesPackage{commons/packages/alakohdat}

% Ympäristöjä listoille:
% - alakohdat: tehtävien, esimerkkien ja vastausten alakohdat: a), b), c), ... (vrt. enumerate a)-optiolla)
% - vaiheet: ratkaisun vaiheet ym.: 1., 2., 3., ... (vrt. enumerate)
% - luettelo: vapaamuotoiset listat: ei numerointia (vrt. itemize)
% - tekijät: varattu tekijöiden listaukseen, ulkoasu saattaa muuttua
% Huom! "alakohdat vierekkäin" -variantti poistettu

% Käyttöesimerkit:

% \alakohdat
%   § alakohta1
%   § alakohta2
% \loppu

% \vaiheet
%   § vaihe1
%   § vaihe2
% \loppu

% \luettelo
%   § luettelotasolla1
%	§§ luettelotasolla2
%   § luettelotasolla1
%	§§ luettelotasolla2
%	§§§ luettelotasolla3
% \loppu

\newcommand{\alakohdat}[1]{\Activate\begin{easylist}\NewList(Start1=1,Numbers=l,FinalMark={)})#1\end{easylist}\Deactivate}
\newcommand{\vaiheet}[1]{\Activate\begin{easylist}\NewList(Start1=1,Numbers=a,FinalMark={.})#1\end{easylist}\Deactivate}
\newcommand{\luettelo}[1]{\Activate\begin{easylist}[itemize]#1\end{easylist}\Deactivate}
\newcommand{\tekijat}[1]{\Activate\begin{easylist}\NewList(Hide=100)#1\end{easylist}\Deactivate}
